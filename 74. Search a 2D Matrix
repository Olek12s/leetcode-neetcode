class Solution {
public:

    static int getElement(vector<vector<int>> &matrix, int idx) {
        int n = matrix[0].size();
        int row = idx / n;
        int col = idx % n;
        return matrix[row][col];
    }

    static bool searchMatrix(vector<vector<int>> &matrix, int target) {
        int n = matrix.size();
        int m = matrix[0].size();
        int left = 0;
        int right = m * n - 1;

        while (left <= right) {
            int middle = left + (right - left) / 2;

            if (getElement(matrix, middle) > target) {  // target on the left side
                right = middle - 1;
            }
            else if (getElement(matrix, middle) < target) { // target on the right side
                left = middle + 1;
            }
            else return true;
        }
        return false;
    }
};
