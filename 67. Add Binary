
class Solution {
public:
    string addBinary(string a, string b) {
        string res = "";
        int ai = a.size() - 1;
        int bi = b.size() - 1;
        int carry = 0;

        while (ai >= 0 || bi >= 0 || carry > 0) {
            int sum = carry;
            if (ai >= 0) {
                if (a[ai] == '1') sum += 1;
                ai--;
            }
            if (bi >= 0) {
                if (b[bi] == '1') sum += 1;
                bi--;
            }

            if (sum % 2 == 1) res.push_back('1');
            else res.push_back('0');

            if (sum >= 2) carry = 1;
            else carry = 0;
        }
        std::reverse(res.begin(), res.end());
        return res;
    }
};
