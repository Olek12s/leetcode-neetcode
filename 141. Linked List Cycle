class Solution
{
public:
    bool hasCycle(ListNode *head)
    {
        if (head == nullptr || head->next == nullptr) return false;
        ListNode *slow = head;
        ListNode *fast = head->next;
        
        while (fast != nullptr)
        {
            if (slow == fast) return true;   // if 2 pointers meet - there's a cycle
            if (fast->next == nullptr || fast->next->next == nullptr) return false;
            slow = slow->next;
            fast = fast->next->next; 
        }
        
        return false;
    }
};
