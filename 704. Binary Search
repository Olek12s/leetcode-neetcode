class Solution {
public:
    static int search(vector<int>& nums, int target) {
        int n = nums.size();
        int left = 0;
        int right = n-1;

        while (left <= right) {
            int middle = left + (right - left) / 2;

            if (nums[middle] > target) {  // target is on the left
                right = middle - 1;
            }
            else if (nums[middle] < target) { // target is on the right
                left = middle + 1;
            }
            else {
                return middle;
            }
        }
        return -1;
    }
};
