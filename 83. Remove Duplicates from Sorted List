class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        if (head == nullptr) return nullptr;

        ListNode *curr = head;

        while (head->next != nullptr) {
            if (head->val == head->next->val) {
                ListNode *tmp = head->next;
                head->next = head->next->next;
                delete tmp;
            }
            else {
                head = head->next;
            }
        }
        return curr;
    }
};
