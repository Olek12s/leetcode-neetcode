class MinStack
{
public:
    MinStack()
    {
        this->head = nullptr;
    }

    ~MinStack()
    {
        Node *tmp = head;
        while (head != nullptr)
        {
            head = head->next;
            delete tmp;
            tmp = head;
        }
    }

    void push(int val)
    {
        Node *node = new Node(val);
        node->next = head;
        if (head) node->minBefore = std::min(val, head->minBefore);
        else node->minBefore = val;
        head = node;
    }

    void pop()
    {
        if (!head) return;
        Node *temp = head;
        head = head->next;
        delete temp;
    }

    int top()
    {
        return head->data;
    }

    int getMin()
    {
        return head->minBefore;
    }
private:
    class Node
    {
    public:
        int data;
        int minBefore;
        Node *next;

        Node(const int &data)
        {
            this->data = data;
            this->minBefore = data;
            this->next = nullptr;
        }
    };

    Node *head;
};

/**
 * Your MinStack object will be instantiated and called as such:
 * MinStack* obj = new MinStack();
 * obj->push(val);
 * obj->pop();
 * int param_3 = obj->top();
 * int param_4 = obj->getMin();
 */
