class Solution
{
public:
    std::vector<int> twoSum(std::vector<int>& nums, int target)
    {
      int left = 0;
      int right = nums.size() - 1;

      while (left < right)
      {
          int sum = nums[left] + nums[right];

          if (sum == target) return {left + 1, right + 1};

          if (sum > target) // sum too big - move right to the left
          {
              right--;
          }
          else // sum too small - move left to the right
          {
              left++;
          }
      }
      return {};
    }
};
